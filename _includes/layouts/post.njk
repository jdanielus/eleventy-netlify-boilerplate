---
layout: layouts/base.njk
section: post
---

<article>
  {% if featuredImage %}
  <img src="{{ featuredImage }}" alt="{{ title }}" class="image-featured">
  {% endif %}
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if setid %}
  <script>
    $(document).ready(function() {
      getImgs("{{ setid }}");
    });
</script>
  </script>
  <div id="flicker-images" class="gallery"></div>
  {% endif %}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
